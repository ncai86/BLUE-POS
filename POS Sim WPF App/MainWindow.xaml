<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_Sim_WPF_App"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Class="POS_Sim_WPF_App.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F" MaxWidth="800" MaxHeight="450" MinWidth="800" MinHeight="450">


    <Window.Resources>
        <Style x:Key="HoverGrowButtonStyle" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DropShadowEffect x:Key="DropShadowEffect"
                      Color="Black"
                      Direction="270"
                      ShadowDepth="2"
                      Opacity="0.3"
                      BlurRadius="4"/>

    </Window.Resources>




    <Grid>
        <Grid Margin="10,14,0,-18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="54*"/>
            </Grid.ColumnDefinitions>
            <Border VerticalAlignment="Top" Padding="40" Height="400" CornerRadius="12" Background="White" Margin="-6,0,530,0" Grid.ColumnSpan="2">
                <Grid Margin="-30,-30,-30,-30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="279*"/>
                        <RowDefinition Height="101*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>



                    <StackPanel Margin="-9,0,-6,0">
                        <!-- Header Row -->
                        <Grid Width="225" Height="25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="67"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="95"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Item" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Qty" Grid.Column="1" FontWeight="Bold" FontSize="14" TextAlignment="Right" Margin="8,0,8,0"/>
                            <TextBlock Text="Price" Grid.Column="2" FontWeight="Bold" FontSize="14" Margin="60,0,0,0"/>
                        </Grid>
                        <ListBox x:Name="POSDisplayListBox" ScrollViewer.CanContentScroll="False" d:ItemsSource="{d:SampleData ItemCount=5}" ItemsSource="{Binding SalesItems}" Width="244" Height="236">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Grid Height="25">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="77"/>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="96"/>
                                                <ColumnDefinition Width="29"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Height="21"/>
                                            <TextBlock Text="{Binding Quantity}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Right" Height="21" Width="54"  Grid.ColumnSpan="3" Margin="60,0,0,0">
                                            </TextBlock>
                                            <TextBlock Text="{Binding TotalPrice, StringFormat=¥\{0:0\}}"
                               Grid.Column="2"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               TextAlignment="Right" Margin="15,0,0,0" Width="80" Height="21"/>
                                            <Button x:Name="RemoveSelectedItem" Grid.Column="3" Content="×" HorizontalAlignment="Center" VerticalAlignment="Center" Height="23" Width="16" Click="RemoveSelectedItem_Click" Foreground="#FFB54545" VerticalContentAlignment="Center" FontWeight="Bold">
                                            </Button>
                                        </Grid>
                                        <Rectangle Height="1" Stroke="Gray" StrokeDashArray="2,2" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- ListBox with Items -->
                    </StackPanel>

                    <Label x:Name="TotalAmountLabel" Content="税込価格" HorizontalAlignment="Left" Margin="42,2,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
                    <Label x:Name="TaxAmountLabel" Content="消費税" HorizontalAlignment="Left" Margin="58,28,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16"/>
                    <Label x:Name="TotalAmountValue" Content="¥" HorizontalAlignment="Left" Margin="108,2,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Width="90" Foreground="#FFA7A7A7" HorizontalContentAlignment="Right" ClipToBounds="True"/>
                    <Label x:Name="TotalVatValue" Content="¥" HorizontalAlignment="Left" Margin="108,28,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Width="90" Foreground="#FFA7A7A7" HorizontalContentAlignment="Right"/>
                    <Button x:Name="ClearAllListedBtn" Content="クリア" HorizontalAlignment="Left" Margin="0,61,0,0" VerticalAlignment="Top" Width="50" Height="30" BorderThickness="1,1,1,1" SnapsToDevicePixels="True" Grid.Row="1" Click="ClearAllListedBtn_Click"/>
                    <ToggleButton x:Name="TaxFreeToggle" 
                                  Content="免税" 
                                  HorizontalAlignment="Left" 
                                  Margin="103,61,0,0" 
                                  VerticalAlignment="Top" 
                                  Width="60" Height="30" 
                                  BorderThickness="1,1,1,1" 
                                  Grid.Row="1" 
                                  Background="#FF001EC8" 
                                  Foreground="White" 
                                  BorderBrush="Black"
                                  Checked="ToggleTaxFreeEnableButton_Checked"
                                  Unchecked="ToggleTaxFreeEnableButton_Unchecked" Focusable="False">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3"
                                                    Padding="5"
                                                    Effect="{StaticResource DropShadowEffect}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border" Property="Background" Value="Gray"/>
                                                    <Setter Property="Foreground" Value="LightGray"/>
                                                </Trigger>
                                                <!-- Only Checked state styling -->
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="DarkBlue"/>
                                                    <Setter TargetName="border" Property="Padding" Value="6,6,4,4"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <!-- Unchecked (Popped up) -->
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter TargetName="border" Property="Background" Value="#FF001EC8"/>
                                                    <Setter TargetName="border" Property="Padding" Value="4,4,6,6"/>
                                                </Trigger>
                                                <!-- No MouseOver trigger = no hover effect -->
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                    <Button Content="支払" HorizontalAlignment="Left" Margin="168,61,0,0" VerticalAlignment="Top" Width="50" Height="30" BorderThickness="1,1,1,1" SnapsToDevicePixels="True" Grid.Row="1"/>
                </Grid>
            </Border>
            <Border
                Width="520" VerticalAlignment="Top" Padding="40" Height="400" HorizontalAlignment="Center" CornerRadius="12" Background="White" Grid.Column="1">
                <TabControl x:Name="tabView" Margin="-30,-48,-30,-22" IsSynchronizedWithCurrentItem="True" SelectedIndex="1" BorderBrush="#FFFBFBFB">
                    <TabItem x:Name="POSTab" Header="POS">
                        <TabItem.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFF0F0F0"/>
                                <GradientStop Color="Black" Offset="1"/>
                            </LinearGradientBrush>
                        </TabItem.Background>
                        <Grid x:Name="POSContainer" Background="White" Margin="-3,0,3,0">
                            <Button x:Name="LaunchIC2" HorizontalAlignment="Left" Margin="417,299,0,0" VerticalAlignment="Top" Background="Black" Foreground="White" Width="60" Height="61" Click="LaunchIC2_Click">
                                <Button Content="Button"/>
                            </Button>
                            <Wpf:WebView2 x:Name="webviewContainer" HorizontalAlignment="Left" Height="63" Margin="0,299,0,0" VerticalAlignment="Top" Width="51"/>
                            <Border BorderBrush="Black" BorderThickness="1"  CornerRadius="15,15,15,15" Margin="0,0,0,23">
                                <Grid Margin="0,18,0,-19">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="Product1" Content="お土産A" Tag="1100" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF22BDE6" Click="Product_Click"/>
                                    <Button x:Name="Product2" Content="お土産B" Tag="2100" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="76,10,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF22BDE6" Click="Product_Click"/>
                                    <Button x:Name="Product3" Content="お土産C" Tag="800" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="142,10,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF22BDE6" Click="Product_Click"/>
                                    <Button x:Name="Product4" Content="お土産D" Tag="5100" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="208,10,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF22BDE6" Click="Product_Click"/>
                                    <Button x:Name="Product5" Content="お土産E" Tag="8100" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="274,10,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF22BDE6" Click="Product_Click"/>
                                    <Button x:Name="Product6" Content="お土産F" Tag="2000" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="340,10,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF22BDE6" Click="Product_Click"/>
                                    <Button x:Name="Product7" Content="お土産G" Tag="500" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="406,10,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF22BDE6" Click="Product_Click"/>
                                    <Button x:Name="Product8" Content="文房具A" Tag="5000" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF43F1BD" Click="Product_Click"/>
                                    <Button x:Name="Product9" Content="文房具B" Tag="1000" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="76,110,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF43F1BD" Click="Product_Click"/>
                                    <Button x:Name="Product10" Content="文房具C" Tag="8000" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="142,110,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF43F1BD" Click="Product_Click"/>
                                    <Button x:Name="Product11" Content="雑貨A" Tag="9000" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="208,110,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FFC3CFD4" Click="Product_Click"/>
                                    <Button x:Name="Product12" Content="雑貨B" Tag="3200" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="274,110,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FFC3CFD4" Click="Product_Click"/>
                                    <Button x:Name="Product13" Content="雑貨C" Tag="15000" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="340,110,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FFC3CFD4" Click="Product_Click"/>
                                    <Button x:Name="Product14" Content="雑貨D" Tag="600" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="406,110,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FFC3CFD4" Click="Product_Click"/>
                                    <Button x:Name="Product15" Content="文房具D" Tag="1400" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF43F1BD" Click="Product_Click"/>
                                    <Button x:Name="Product16" Content="文房具E" Tag="650" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="76,210,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF43F1BD" Click="Product_Click"/>
                                    <Button x:Name="Product17" Content="文房具F" Tag="10000" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="142,210,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FF43F1BD" Click="Product_Click"/>
                                    <Button x:Name="Product18" Content="雑貨E" Tag="5000" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="208,210,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FFC3CFD4" Click="Product_Click"/>
                                    <Button x:Name="Product19" Content="雑貨F" Tag="1170" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="274,210,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FFC3CFD4" Click="Product_Click"/>
                                    <Button x:Name="Product20" Content="雑貨G" Tag="500" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="340,210,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FFC3CFD4" Click="Product_Click"/>
                                    <Button x:Name="Product21" Content="お酒A" Tag="1600" Style="{StaticResource HoverGrowButtonStyle}" HorizontalAlignment="Left" Margin="406,210,0,0" VerticalAlignment="Top" Height="100" Width="66" Background="#FFD4C3C3" Click="Product_Click"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="SettingsTab" Header="Settings">
                        <Grid x:Name="SettingsContainer" Background="#FFC38A8A">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="242*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TestContainer" HorizontalAlignment="Left" Margin="216,33,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="148" Height="218" Grid.Column="1"/>
                            <StackPanel VerticalAlignment="Top" Grid.Column="1" Margin="19,33,294,0" Height="344">
                                <StackPanel>
                                    <TextBlock Margin="0,0,0,5" Text="Username"/>
                                    <TextBox x:Name="usernameTextbox" Height="35" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Margin="0,10,0,5" Text="Password"/>
                                    <PasswordBox x:Name="passwordTextbox" Height="35" VerticalContentAlignment="Center" Password=""/>
                                </StackPanel>
                                <StackPanel >
                                    <Button x:Name="TokTest" Margin="0,15,0,0" Content="Save" Background="#FF1C238A" Foreground="White" Cursor="Hand" Width="160" Height="35" Click="TokTest_Click"/>
                                    <Button x:Name="settingsClearBtn" Margin="0,10,0,0" Height="20" Foreground="White" Content="Clear" Cursor="Hand" BorderThickness="0" Background="#FF757575" Click="SettingsClear_Click" Width="156"/>
                                    <Button x:Name="WSTest" Content="Connect to WS" Background="#FF1C238A" Foreground="White" Cursor="Hand" Width="160" Height="35" Click="WSTest_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>

        </Grid>
        <StackPanel/>
    </Grid>

</Window>

    
    
<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_Sim_WPF_App"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Class="POS_Sim_WPF_App.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">

    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                      Color="#444"
                      ShadowDepth="5"
                      BlurRadius="15"
                      Opacity="0.4"/>
    </Window.Resources>
    <Grid>
        <Grid Margin="10,14,0,-18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="54*"/>
            </Grid.ColumnDefinitions>
            <Border
    Width="240" VerticalAlignment="Top" Padding="40" Height="400" HorizontalAlignment="Left" Effect="{DynamicResource ShadowEffect}" CornerRadius="12" Background="White"/>
            <Border
                Width="520" VerticalAlignment="Top" Padding="40" Height="400" HorizontalAlignment="Center" Effect="{DynamicResource ShadowEffect}" CornerRadius="12" Background="White" Grid.Column="1">
                <TabControl x:Name="tabView" Margin="-30,-40,-30,-30" IsSynchronizedWithCurrentItem="True" SelectedIndex="1">
                    <TabItem x:Name="POSTab" Header="POS">
                        <TabItem.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFF0F0F0"/>
                                <GradientStop Color="Black" Offset="1"/>
                            </LinearGradientBrush>
                        </TabItem.Background>
                        <Grid x:Name="POSContainer" Background="White" Margin="-3,0,3,0">
                            <Button x:Name="LaunchIC2" HorizontalAlignment="Left" Margin="100,42,0,0" VerticalAlignment="Top" Background="Black" Foreground="White" Width="60" Height="61" Click="LaunchIC2_Click">
                                <Button Content="Button"/>
                            </Button>
                            <Wpf:WebView2 x:Name="webviewContainer" HorizontalAlignment="Left" Height="234" Margin="10,128,0,0" VerticalAlignment="Top" Width="290"/>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="SettingsTab" Header="Settings">
                        <Grid x:Name="SettingsContainer" Background="#FFC38A8A">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="21*"/>
                                <ColumnDefinition Width="473*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="TokTest" Content="TOK" HorizontalAlignment="Left" Margin="68,68,0,0" VerticalAlignment="Top" Background="#FF8A1C1C" Foreground="White" Width="60" Height="61" Click="TokTest_Click" Grid.Column="1"/>
                            <TextBox x:Name="TestContainer" HorizontalAlignment="Left" Margin="216,33,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="148" Height="218" Grid.Column="1"/>
                            <StackPanel
                                VerticalAlignment="Top" Grid.Column="1" Margin="19,134,294,0">
                                <TextBlock
                                    Text="Welcome" HorizontalAlignment="Center" FontSize="28" FontWeight="Bold" Foreground="#2D2D30"/>
                                <StackPanel
    >
                                    <TextBlock
                                        Margin="0,0,0,5" Text="Username"/>
                                    <TextBox x:Name="usernameTextbox"
                                        Height="35"/>
                                </StackPanel>
                                <StackPanel
    >
                                    <TextBlock
                                        Margin="0,10,0,5" Text="Password"/>
                                    <PasswordBox x:Name="passwordTextbox"
                                        Height="35"/>
                                </StackPanel>
                                <Button x:Name="SaveBtn"
                                    Margin="0,20,0,0" Height="40" FontWeight="Bold" Foreground="White" Content="Save" Cursor="Hand" BorderThickness="0" Background="#4CAF50" Click="Button_Click"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>

        </Grid>
    </Grid>

</Window>

    
    